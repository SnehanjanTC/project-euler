# Production Environment Configuration
# Copy this to .env and fill in your production values

# Environment
ENVIRONMENT=production

# CORS - Production domains only
ALLOWED_ORIGINS_PROD=https://yourdomain.com,https://www.yourdomain.com

# Rate Limiting
RATE_LIMIT_ENABLED=True
MAX_REQUESTS_PER_MINUTE=60
MAX_LLM_CALLS_PER_HOUR=100

# Ollama Configuration (if using local LLM)
OLLAMA_BASE_URL=http://ollama-server:11434
OLLAMA_MODEL=qwen3-vl:2b

# OpenAI Configuration (Optional - for higher quality AI matching)
OPENAI_API_KEY=your_production_openai_key_here

# File Upload Limits
MAX_FILE_SIZE=104857600  # 100MB
MAX_ROWS_FOR_ANALYSIS=1000000

# Security
# Add any additional security settings here
